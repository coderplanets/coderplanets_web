{
  "name": "mastani",
  "version": "0.0.1",
  "license": "TODO",
  "scripts": {
    "dev": "run-p server ",
    "lint": "eslint pages/**/*.js components/**/* stores/**/*",
    "test": "cross-env NODE_ENV=test jest",
    "test:watch": "npm run test -- --watch",
    "test:cover": "npm run test -- --coverage",
    "server": "npm run clean && node server.js",
    "build": "run-s dist clean",
    "dist": "shjs ./utils/scripts/create_default_lang.js && next build && next export -o \"build\"",
    "start": "NODE_ENV=production node server.js",
    "clean": "shjs ./utils/scripts/clean.js",
    "precommit": "lint-staged",
    "gen": "plop --plopfile ./utils/scripts/generators/index.js"
  },
  "lint-staged": {
    "*.js": [
      "prettier",
      "lint"
    ]
  },
  "babel": {
    "presets": [
      "next/babel"
    ],
    "plugins": [
      "transform-decorators-legacy",
      [
        "styled-components",
        {
          "ssr": true,
          "displayName": true,
          "preprocess": false
        }
      ],
      [
        "react-intl",
        {
          "messagesDir": "lang/.messages/"
        }
      ]
    ],
    "env": {
      "test": {
        "presets": [
          [
            "env",
            {
              "modules": "commonjs"
            }
          ],
          "next/babel"
        ]
      }
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "js"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest"
    }
  },
  "prettier": {
    "bracketSpacing": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "tabWidth": 2,
    "semi": false
  },
  "dependencies": {
    "cross-env": "^5.0.5",
    "debug": "^3.0.1",
    "isomorphic-fetch": "^2.2.1",
    "mobx": "3.2.2",
    "mobx-react": "^4.2.2",
    "mobx-state-tree": "^1.0.0",
    "next": "3.2.2",
    "prop-types": "^15.5.10",
    "react": "15.6.1",
    "react-dom": "15.6.1",
    "react-intl": "^2.3.0",
    "styled-components": "2.1.2"
  },
  "devDependencies": {
    "babel-eslint": "^8.0.0",
    "babel-jest": "^21.0.2",
    "babel-plugin-react-intl": "^2.3.1",
    "babel-plugin-styled-components": "1.2.0",
    "babel-plugin-transform-decorators-legacy": "1.3.4",
    "chalk": "^2.1.0",
    "enzyme": "^2.9.1",
    "eslint": "^4.6.1",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-config-prettier": "^2.4.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-prettier": "^2.2.0",
    "eslint-plugin-react": "^7.3.0",
    "glob": "^7.1.2",
    "husky": "^0.14.3",
    "jest": "^21.0.2",
    "lint-staged": "^4.0.4",
    "mobx-react-devtools": "^4.2.15",
    "npm-run-all": "^4.1.1",
    "plop": "^1.8.1",
    "prettier": "^1.6.1",
    "react-test-renderer": "^15.6.1",
    "shelljs": "^0.7.8"
  }
}
