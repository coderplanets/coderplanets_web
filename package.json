{
  "name": "mastani",
  "version": "0.0.1",
  "license": "MIT",
  "scripts": {
    "dev": "cross-env NODE_ENV=dev run-p server lint:watch",
    "lint": "eslint pages/**/*.js components/**/* containers/**/* stores/**/*",
    "lint:watch": "esw -w pages/**/*.js components/**/* containers/**/* stores/**/*",
    "pretest": "npm run lint",
    "test": "cross-env NODE_ENV=test jest",
    "test:watch": "npm run test -- --watch",
    "test:cover": "npm run test -- --coverage",
    "server": "npm run clean && node server.js",
    "build": "run-s dist clean",
    "dist": "npm run i18n && next build && next export -o \"build\"",
    "i18n": "shjs ./utils/scripts/create_default_lang.js && shjs ./utils/scripts/cp_locales.js",
    "start": "NODE_ENV=production node server.js",
    "clean": "shjs ./utils/scripts/clean.js",
    "precommit": "lint-staged",
    "gen": "plop --plopfile ./utils/scripts/generators/index.js",
    "analyze": "cross-env ANALYZE=1 next build",
    "coveralls": "cat ./coverage/lcov.info | coveralls"
  },
  "lint-staged": {
    "*.js": [
      "prettier",
      "lint"
    ]
  },
  "babel": {
    "presets": [
      "next/babel"
    ],
    "plugins": [
      "transform-decorators-legacy",
      [
        "styled-components",
        {
          "ssr": true,
          "displayName": true,
          "preprocess": false
        }
      ],
      [
        "react-intl",
        {
          "messagesDir": "lang/.messages/"
        }
      ],
      [
        "import",
        {
          "libraryName": "antd"
        }
      ],
      "ramda"
    ],
    "env": {
      "test": {
        "presets": [
          [
            "env",
            {
              "modules": "commonjs"
            }
          ],
          "next/babel"
        ]
      }
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "js"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "setupFiles": [
      "<rootDir>/utils/testing/shim.js",
      "<rootDir>/utils/testing/enzyme_setup.js"
    ]
  },
  "prettier": {
    "bracketSpacing": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "tabWidth": 2,
    "semi": false
  },
  "dependencies": {
    "accepts": "^1.3.4",
    "antd": "2.13.5",
    "debug": "3.1.0",
    "glob": "^7.1.2",
    "intl": "^1.2.5",
    "isomorphic-fetch": "^2.2.1",
    "mobx": "3.3.1",
    "mobx-react": "4.3.4",
    "mobx-state-tree": "^1.0.0",
    "module-alias": "^2.0.1",
    "next": "4.1.3",
    "path-match": "^1.2.4",
    "polished": "1.8.0",
    "prop-types": "^15.5.10",
    "ramda": "0.25.0",
    "react": "16.0.0",
    "react-dom": "16.0.0",
    "react-icons": "^2.2.5",
    "react-intl": "2.4.0",
    "react-keydown": "^1.9.4",
    "react-svg": "^2.1.22",
    "react-world-flags": "^0.0.3",
    "rxjs": "^5.4.3",
    "scroll-into-view-if-needed": "^1.2.1",
    "styled-components": "2.2.3",
    "timeago-react": "^1.2.2"
  },
  "devDependencies": {
    "babel-eslint": "^8.0.0",
    "babel-jest": "^21.0.2",
    "babel-plugin-import": "^1.6.2",
    "babel-plugin-ramda": "^1.4.3",
    "babel-plugin-react-intl": "^2.3.1",
    "babel-plugin-styled-components": "1.3.0",
    "babel-plugin-transform-decorators-legacy": "1.3.4",
    "chalk": "^2.1.0",
    "coveralls": "^2.13.1",
    "cross-env": "^5.0.5",
    "enzyme": "3.1.0",
    "enzyme-adapter-react-16": "^1.0.1",
    "eslint": "^4.6.1",
    "eslint-config-airbnb": "16.0.0",
    "eslint-config-prettier": "^2.4.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-prettier": "^2.2.0",
    "eslint-plugin-react": "7.4.0",
    "eslint-watch": "^3.1.3",
    "husky": "^0.14.3",
    "jest": "^21.0.2",
    "lint-staged": "^4.0.4",
    "mobx-react-devtools": "^4.2.15",
    "npm-run-all": "^4.1.1",
    "plop": "^1.8.1",
    "prettier": "^1.6.1",
    "react-test-renderer": "16.0.0",
    "shelljs": "^0.7.8",
    "webpack-bundle-analyzer": "^2.9.0"
  }
}
