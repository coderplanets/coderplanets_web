{
  "name": "mastani_web",
  "version": "0.1.0",
  "license": "MIT",
  "scripts": {
    "dev": "cross-env NODE_ENV=dev run-p server lint:watch",
    "lint": "eslint --fix pages/**/*.js components/**/* containers/**/* stores/**/*",
    "lint:watch": "esw -w pages/**/*.js components/**/* containers/**/* stores/**/*",
    "pretest": "npm run lint",
    "test": "cross-env NODE_ENV=test jest",
    "test:watch": "npm run test -- --watch",
    "test:cover": "npm run test -- --coverage",
    "server": "npm run clean && node server.js",
    "build": "run-s dist clean",
    "dist": "npm run i18n && next build && next export -o \"build\"",
    "i18n": "shjs ./utils/scripts/create_default_lang.js && shjs ./utils/scripts/cp_locales.js",
    "start": "NODE_ENV=production node server.js",
    "clean": "shjs ./utils/scripts/clean.js",
    "precommit": "lint-staged",
    "gen": "plop --plopfile ./utils/scripts/generators/index.js",
    "analyze": "cross-env ANALYZE=1 next build",
    "api:play": "GRAPHQL_CONFIG_ENDPOINT_NAME=mastani graphql playground",
    "api:graph": "graphql voyager",
    "graph:mastani": "graphql get-schema -e mastani && head ./schema.graphql",
    "graph:example": "graphql get-schema -e example && graphql voyager",
    "coveralls": "cat ./coverage/lcov.info | coveralls"
  },
  "lint-staged": {
    "*.js": [
      "prettier",
      "npm run lint"
    ]
  },
  "babel": {
    "presets": [
      "next/babel"
    ],
    "plugins": [
      "transform-decorators-legacy",
      [
        "styled-components",
        {
          "ssr": true,
          "displayName": true,
          "preprocess": false
        }
      ],
      [
        "react-intl",
        {
          "messagesDir": "lang/.messages/"
        }
      ],
      [
        "import",
        {
          "libraryName": "antd"
        }
      ],
      "ramda"
    ],
    "env": {
      "test": {
        "presets": [
          [
            "env",
            {
              "modules": "commonjs"
            }
          ],
          "next/babel"
        ]
      }
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "js"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "setupFiles": [
      "<rootDir>/utils/testing/shim.js",
      "<rootDir>/utils/testing/enzyme_setup.js"
    ]
  },
  "prettier": {
    "bracketSpacing": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "tabWidth": 2,
    "semi": false
  },
  "dependencies": {
    "accepts": "^1.3.4",
    "antd": "3.1.6",
    "apollo-cache-inmemory": "1.1.11",
    "apollo-client": "2.2.7",
    "apollo-link": "1.2.1",
    "apollo-link-error": "1.0.7",
    "apollo-link-http": "1.5.3",
    "apollo-link-retry": "2.2.0",
    "debug": "3.1.0",
    "draft-js": "^0.10.5",
    "draft-js-mention-plugin": "^2.0.1",
    "draft-js-plugins-editor": "^2.0.4",
    "glob": "^7.1.2",
    "graphql-tag": "^2.6.1",
    "intl": "^1.2.5",
    "isomorphic-fetch": "^2.2.1",
    "mastani-codehighlight": "0.0.5",
    "mobx": "4.1.0",
    "mobx-react": "5.0.0",
    "mobx-state-tree": "2.0.1",
    "module-alias": "^2.0.1",
    "next": "5.1.0",
    "path-match": "^1.2.4",
    "polished": "1.9.2",
    "prop-types": "^15.5.10",
    "pubsub-js": "^1.6.0",
    "ramda": "0.25.0",
    "randomcolor": "^0.5.3",
    "react": "16.2.0",
    "react-beautiful-dnd": "6.0.0",
    "react-calendar-heatmap": "^1.6.3",
    "react-content-loader": "3.1.1",
    "react-dom": "16.2.0",
    "react-icons": "^2.2.5",
    "react-intl": "2.4.0",
    "react-json-view": "1.16.1",
    "react-keydown": "^1.9.4",
    "react-map-gl": "^3.2.1",
    "react-masonry-component": "^6.0.1",
    "react-svg": "2.2.16",
    "react-tooltip": "^3.4.0",
    "react-waypoint": "^8.0.0",
    "remarkable": "^1.7.1",
    "remarkable-emoji": "^0.1.3",
    "remarkable-mentions": "^0.1.0",
    "rxjs": "^5.4.3",
    "scroll-into-view-if-needed": "1.5.0",
    "shortid": "^2.2.8",
    "styled-components": "3.2.4",
    "timeago-react": "2.0.0"
  },
  "devDependencies": {
    "babel-eslint": "8.2.2",
    "babel-jest": "22.4.1",
    "babel-plugin-import": "1.6.7",
    "babel-plugin-ramda": "1.5.0",
    "babel-plugin-react-intl": "2.4.0",
    "babel-plugin-styled-components": "^1.5.0",
    "babel-plugin-transform-decorators-legacy": "1.3.4",
    "chalk": "2.3.2",
    "coveralls": "3.0.0",
    "cross-env": "^5.0.5",
    "dotenv": "^5.0.0",
    "dotenv-webpack": "^1.5.4",
    "enzyme": "3.3.0",
    "enzyme-adapter-react-16": "1.1.1",
    "eslint": "4.18.2",
    "eslint-config-airbnb": "16.0.0",
    "eslint-config-prettier": "2.9.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-prettier": "2.6.0",
    "eslint-plugin-react": "7.7.0",
    "eslint-watch": "^3.1.3",
    "graphiql": "^0.11.10",
    "graphql-cli": "^2.15.6",
    "graphql-cli-voyager": "^0.1.2",
    "husky": "^0.14.3",
    "jest": "22.4.2",
    "lint-staged": "7.0.0",
    "npm-run-all": "^4.1.1",
    "plop": "^1.8.1",
    "prettier": "1.11.1",
    "react-test-renderer": "16.2.0",
    "shelljs": "0.8.1",
    "webpack-bundle-analyzer": "2.11.1"
  }
}
